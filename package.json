{
    "name": "simple-open",
    "version": "0.1.0",
    "description": "Simply open a group of your things in one click. ",
    "main": "main.js",
    "scripts": {
        "start": "NODE_ENV=development electron .",
        "start-prod": "NODE_ENV=production electron .",
        "dev": "NODE_ENV=development node ./dev.js",
        "dev-prod": "NODE_ENV=production node ./dev.js",
        "build": "rm -rf build && electron-builder build -m"
    },
    "keywords": [
        "launcher"
    ],
    "author": {
        "name": "Duan",
        "email": "hello@duanjun.net"
    },
    "repository": "https://github.com/lenuxo/simple-open",
    "build": {
        "appId": "com.electron.simple-open",
        "productName": "Simple Open",
        "copyright": "Copyright Â© 2018 Duan Jun",
        "directories": {
            "output": "build"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "./assets/icons/icon.icns",
            "artifactName": "${productName}_setup_${version}.${ext}"
        },
        "dmg": {
            "icon": "./assets/icons/icon.icns",
            "background": "./assets/background/dmg-background.png",
            "iconTextSize": 16,
            "iconSize": 120
        },
        "publish": [
            {
                "provider": "github"
            }
        ]
    },
    "license": "MIT",
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.5",
        "babel-preset-env": "*",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-1": "^6.24.1",
        "electron": "^3.0.2",
        "electron-builder": "^20.28.4",
        "electron-is-dev": "^1.0.1",
        "parcel-bundler": "^1.10.3"
    },
    "dependencies": {
        "styled-components": "^3.4.9",
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "react-intl": "^2.7.1",
        "mobx": "^5.5.0",
        "mobx-react": "^5.2.8",
        "electron-updater": "^3.1.2",
        "file-icon": "^3.1.0",
        "fs-extra": "^7.0.0",
        "lodash": "^4.17.11",
        "shortid": "^2.2.13"
    }
}
